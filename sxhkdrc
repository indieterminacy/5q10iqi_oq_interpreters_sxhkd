### 60m Launchers
# 30 Display
## 10r Close
### 30f Close Window
# Close current window
alt + w
    bspc window -c
super + w
	bspc window -c
## 10r Shrink
### 30f Shrink Windows
# shrink window in direction
super + ctrl + shift + {Left,Down,Up,Right}
    bspc window --edge {right -10,up +10,down -10,left +10}
# Decrease window width or height
alt + super + {h,j,k,l}
   bspc window -e {right,up,down,left} pull

### 30f Shrink Gaps
# change window gap at run time
super + plus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))
# Restore original gap
super + equal
    bspc config top_padding 6; bspc config -d focused window_gap 15
#
super + minus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 5 ))
# Remove gap
super + 0
    bspc config top_padding 14; bspc config -d focused window_gap 0
### 30f Transparancy
#### 10r Alter Transparency
##### 10r Decrease Transparency
super + alt + minus
    ~/.config/bspwm/iq_utilities/terminal_transparency decrement
##### 10r Increase Transparency
super + alt + plus
    ~/.config/bspwm/iq_utilities/terminal_transparency increment
##
# top left
super + shift + 1
    ~/.config/bspwm/iq_utilities/preset 'top-left'
# bottom left
super + shift + 2
    ~/.config/bspwm/iq_utilities/preset 'bottom-left'
# vertical right
super + shift + 3
    ~/.config/bspwm/iq_utilities/preset 'vertical-right'
# wide vertical left
super + shift + 4;
    ~/.config/bspwm/iq_utilities/preset 'wide-vertical-left'
# small bottom left
super + shift + 5
    ~/.config/bspwm/iq_utilities/preset 'small-bottom-left'
### 10r Toggle Visibility
# Toggle visibility status bar
super + space
    ~/.config/bspwm/iq_utilities/hide dzen2-bottom-status-bar
### 10r Toggle Dmenu
# Show dmenu bar
ctrl + space
    ~/.config/bspwm/iq_utilities/application_launcher
# Show dmenu bar (windows)
ctrl + shift + space
    ~/.config/bspwm/iq_utilities/application_switcher
### 30t Hide Windows
# un/hide currently active window
super + {_,shift} + u
    ~/.config/bspwm/iq_utilities/toggle {hide,show}
# Show Desktop & Bar
super + d
    bspc control --toggle-visibility | echo "X`df -h | head -n 2 | tail -n 1 | cut -d 'G' -f 3`" > /tmp/panel-fifo
##
###
super + l
    ~/.config/bspwm/iq_utilities/switch.sh
## 10r Resize
# Resize according to xdotool man example script
super + shift {r,t,y,u}
    ~/60o_Control_Qiuy/30_Display/gq_panels/oq_xdotool/rq_alter_panels.sh {urxvt 600 400,urxvtcd 600 400,firefox 600 400,icedove 600 400}
# Resize floating windows
super + shift + {h,l,k,j}
    xdo resize {-w -50,-w +50,-h -50,-h +50}
## 10r Resize Window
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}
# Mouse button to move and resize
super + shift + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}
## 10r Enlarge Window
### 10r Make Fullscreen
alt + f
    ~/.config/bspwm/iq_utilities/full
### 10r Make Floating Termina
ctrl + shift + Return
    ~/.config/bspwm/iq_utilities/floating_terminal
# Toggle between floating or fullscreen for a window
super + {s,f}
	bspc window -t {floating,fullscreen}
# enlarge window in direction
super + ctrl + {Left,Down,Up,Right}
    bspc window --edge {left -10,down +10,up -10,right +10}
## 10r Move Window
# move window in direction
super + {H,J,K,L}
    bspc window --swap {left,down,up,right}


# 40 Movement
# Go to or move to a window to given desktop
alt + {_,ctrl+ }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}
### 40y Navigate Music

# XF86AudioMute
#     amixer set Master toggle
# XF86AudioLowerVolume
super + [
    amixer -c 0 set Master 5dB-
super + ]
    amixer -c 0 set Master 5dB+
